<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Uploadpdf">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="117dp"
        android:layout_marginLeft="117dp"
        android:layout_marginTop="79dp"
        android:text="UPLOAD PDF"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_uploadselected"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="83dp"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="154dp"
        android:layout_marginEnd="-38dp"
        android:layout_marginRight="-38dp"
        android:text="Button" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_uploadpdf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/btn_uploadselected"
        android:layout_alignLeft="@+id/btn_uploadselected"
        android:layout_alignTop="@+id/btn_uploadselected"
        android:layout_alignEnd="@+id/btn_uploadselected"
        android:layout_alignRight="@+id/btn_uploadselected"
        android:layout_marginStart="-81dp"
        android:layout_marginLeft="-81dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="-80dp"
        android:layout_marginRight="-80dp" />


</RelativeLayout>